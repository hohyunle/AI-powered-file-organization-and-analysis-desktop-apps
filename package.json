{
  "name": "ai-file-tidy",
  "version": "1.0.0",
  "description": "AI 파일 정리 도우미 - 데스크톱 앱",
  "main": "frontend/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": ["electron", "file-organizer", "ai"],
  "author": "AI File Tidy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.aifiletidy.app",
    "productName": "AI 파일 정리 도우미",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "frontend/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/assets/icon.png"
    }
  }
}
